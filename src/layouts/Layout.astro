---
import Logo from "../components/Logo.astro";
import './layout.scss'
const { title, description, flexibleHeader = false, hero = undefined, heroImage } = Astro.props;
---
<!doctype html>
<html lang="de" class={[flexibleHeader ? '' : 'scrolled', hero ? 'hero' : ''].join(' ')}>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>{title}</title>

	<!-- Global Metadata -->
	<meta name="viewport" content="width=device-width,initial-scale=1"/>
	<link rel="icon" type="image/svg+xml" href="/img/logo.svg"/>

	<!-- Primary Meta Tags -->
	<title>{title}</title>
	<meta name="title" content={title}/>
	<meta name="description" content={description}/>
</head>
<body>
	<header>
		<div class="wrapper">
			<a id="logo-container" href="/">
				<Logo color="white"/>
			</a>
			<nav>
				<a href="/das-sind-wir">Ãœber uns</a>
				<a href="/camperausbau">Camperausbau</a>
				<a href="/produkte/tische">Tische</a>
			</nav>
		</div>
	</header>
	<main>
		<slot/>
	</main>

	{flexibleHeader && <script>
		window.addEventListener('scroll', () => {
			const classList = document.documentElement.classList;
			const top = Math.max(document.body.scrollTop, document.documentElement.scrollTop)

			if (top > 70) {
				classList.add('scrolled')
			} else if (top < 10) {
				classList.remove('scrolled')
			}
		})
		</script>}
		<footer>
			<nav>
				<a href="/impressum">Impressum</a>
			</nav>
		</footer>
		<script>
			window.dataLayer = window.dataLayer || [];

			function gtag() {
				dataLayer.push(arguments);
			}

			gtag('js', new Date());
			gtag('config', 'UA-36884636-15');
			</script>
		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-36884636-15"></script>
	</body>
	</html>

<style is:global is:inline>
	html.hero main {
		margin: 0
	}
</style>