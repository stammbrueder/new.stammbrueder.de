---
import { Picture } from "@astrojs/image/components";
export interface Props {
	image: string
	alt: string
}

const { image, alt } = Astro.props
---

<section class="hero">
	<Picture src={image} aspectRatio="3:2" widths={[400, 800, 1200]} loading="eager" alt={alt}/>
	<div class="content">
		<slot/>
	</div>
</section>